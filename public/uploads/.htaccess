# Protection du dossier uploads
# Empêche l'exécution de scripts PHP dans ce dossier

# Désactiver l'exécution de PHP
php_flag engine off

# Bloquer l'accès aux fichiers PHP
<FilesMatch "\.php$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# N'autoriser que les fichiers images
<FilesMatch "\.(jpg|jpeg|png|gif|webp)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

# Désactiver le listing du répertoire
Options -Indexes

# Empêcher l'accès aux fichiers cachés
<FilesMatch "^\.">
    Order Allow,Deny
    Deny from all
</FilesMatch>
