RewriteEngine On

# Base directory configuration
RewriteBase /cabinetdupont/

# If the requested resource exists as a file or directory, skip rewrites
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Route all other requests to index.php
RewriteRule ^(.*)$ index.php [QSA,L]

# Allow direct access to assets
<FilesMatch "\.(css|js|jpg|jpeg|png|gif|ico|svg)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

# Set default character set
AddDefaultCharset UTF-8

# Error handling and logging
php_flag display_errors on
php_value error_reporting E_ALL
php_flag log_errors on
php_value error_log "C:/xampp/htdocs/CabinetDupont/php_error.log"

# Enable error logging
php_flag log_errors on
php_value error_log "error_log.txt"