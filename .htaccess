# ============================================
# CONFIGURATION SÉCURISÉE - CABINET DUPONT
# ============================================

# ============================================
# 1. SÉCURITÉ - EN-TÊTES HTTP
# ============================================

# Empêcher l'inclusion du site dans une iframe (protection contre clickjacking)
Header always set X-Frame-Options "SAMEORIGIN"

# Empêcher le navigateur de deviner le type MIME (protection contre MIME sniffing)
Header always set X-Content-Type-Options "nosniff"

# Activer le filtre XSS du navigateur
Header always set X-XSS-Protection "1; mode=block"

# Politique de sécurité du contenu (Content Security Policy)
# Note: À ajuster selon vos besoins réels
Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://unpkg.com https://cdnjs.cloudflare.com https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdnjs.cloudflare.com https://cdn.jsdelivr.net; font-src 'self' https://fonts.gstatic.com https://cdnjs.cloudflare.com; img-src 'self' data: https:; connect-src 'self' https://cdn.jsdelivr.net;"

# Contrôle du référent (ne pas envoyer le référent vers des sites externes)
Header always set Referrer-Policy "strict-origin-when-cross-origin"

# Forcer HTTPS en production (à activer uniquement si vous avez un certificat SSL)
# Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains"

# Permissions de fonctionnalités du navigateur
Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"

# ============================================
# 2. ROUTAGE ET RÉÉCRITURE D'URL
# ============================================

RewriteEngine On

# Base directory configuration
RewriteBase /cabinetdupont/

# Forcer HTTPS (décommenter en production avec SSL)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# If the requested resource exists as a file or directory, skip rewrites
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Route all other requests to index.php
RewriteRule ^(.*)$ index.php [QSA,L]

# ============================================
# 3. PROTECTION DES FICHIERS SENSIBLES
# ============================================

# Bloquer l'accès aux fichiers de configuration
<FilesMatch "^(config\.php|\.env|\.htaccess|\.htpasswd)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Bloquer l'accès aux fichiers de logs
<FilesMatch "\.(log|txt)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Bloquer l'accès aux fichiers de sauvegarde
<FilesMatch "\.(bak|backup|old|sql|zip|tar|gz)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Bloquer l'accès au dossier app (code source)
<IfModule mod_rewrite.c>
    RewriteRule ^app/ - [F,L]
    RewriteRule ^Backup/ - [F,L]
</IfModule>

# ============================================
# 4. GESTION DES RESSOURCES STATIQUES
# ============================================

# Autoriser l'accès aux assets (CSS, JS, images)
<FilesMatch "\.(css|js|jpg|jpeg|png|gif|ico|svg|webp|woff|woff2|ttf|eot)$">
    Order Allow,Deny
    Allow from all
    
    # Ajouter des en-têtes de cache pour les performances
    <IfModule mod_expires.c>
        ExpiresActive On
        ExpiresDefault "access plus 1 month"
    </IfModule>
</FilesMatch>

# ============================================
# 5. COMPRESSION GZIP (PERFORMANCE)
# ============================================

<IfModule mod_deflate.c>
    # Compresser le HTML, CSS, JavaScript, texte, XML et polices
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE font/woff
    AddOutputFilterByType DEFLATE font/woff2
    AddOutputFilterByType DEFLATE application/font-woff
    AddOutputFilterByType DEFLATE application/font-woff2
</IfModule>

# ============================================
# 6. MISE EN CACHE DES RESSOURCES
# ============================================

<IfModule mod_expires.c>
    ExpiresActive On
    
    # Images
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    
    # CSS et JavaScript
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    
    # Polices
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    
    # HTML et données (pas de cache)
    ExpiresByType text/html "access plus 0 seconds"
    ExpiresByType application/json "access plus 0 seconds"
</IfModule>

# ============================================
# 7. ENCODAGE ET CHARSET
# ============================================

# Définir l'encodage par défaut
AddDefaultCharset UTF-8

# Forcer UTF-8 pour certains types de fichiers
AddCharset UTF-8 .html .css .js .xml .json .rss .atom

# ============================================
# 8. CONFIGURATION PHP (SÉCURITÉ)
# ============================================

# DÉVELOPPEMENT : Afficher les erreurs (à désactiver en production)
php_flag display_errors on
php_flag display_startup_errors on
php_value error_reporting E_ALL

# PRODUCTION : Masquer les erreurs (décommenter en production)
# php_flag display_errors off
# php_flag display_startup_errors off
# php_value error_reporting E_ALL

# Toujours logger les erreurs
php_flag log_errors on
php_value error_log "error_log.txt"

# Augmenter la limite de mémoire si nécessaire
php_value memory_limit 256M

# Limite de taille pour les uploads
php_value upload_max_filesize 10M
php_value post_max_size 10M

# Durée maximale d'exécution (en secondes)
php_value max_execution_time 300
php_value max_input_time 300

# Désactiver les fonctions PHP dangereuses
php_value disable_functions "exec,passthru,shell_exec,system,proc_open,popen,curl_exec,curl_multi_exec,parse_ini_file,show_source"

# ============================================
# 9. PROTECTION CONTRE LES ATTAQUES
# ============================================

# Limiter la taille des requêtes
LimitRequestBody 10485760

# Désactiver la signature du serveur (masquer la version d'Apache)
ServerSignature Off

# Bloquer les user agents suspects
<IfModule mod_rewrite.c>
    RewriteCond %{HTTP_USER_AGENT} ^$ [OR]
    RewriteCond %{HTTP_USER_AGENT} (libwww-perl|wget|python|nikto|curl|scan|java|winhttp|clshttp|loader) [NC,OR]
    RewriteCond %{HTTP_USER_AGENT} (<|>|'|%0A|%0D|%27|%3C|%3E|%00) [NC,OR]
    RewriteCond %{HTTP_USER_AGENT} (;|<|>|'|"|\)|\(|%0A|%0D|%22|%27|%28|%3C|%3E|%00).*(libwww-perl|wget|python|nikto|curl|scan|java|winhttp|HTTrack|clshttp|archiver|loader|email|harvest|extract|grab|miner) [NC]
    RewriteRule .* - [F,L]
</IfModule>

# ============================================
# 10. DÉSACTIVER LE LISTING DES RÉPERTOIRES
# ============================================

Options -Indexes

# ============================================
# 11. PAGES D'ERREUR PERSONNALISÉES
# ============================================

ErrorDocument 400 /cabinetdupont/index.php?page=error&code=400
ErrorDocument 401 /cabinetdupont/index.php?page=error&code=401
ErrorDocument 403 /cabinetdupont/index.php?page=error&code=403
ErrorDocument 404 /cabinetdupont/index.php?page=error&code=404
ErrorDocument 500 /cabinetdupont/index.php?page=error&code=500