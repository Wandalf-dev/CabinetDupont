RewriteEngine On

# Si le fichier ou le répertoire n'existe pas physiquement
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Redirige vers index.php
RewriteRule ^(.*)$ index.php [QSA,L]

# Permettre l'accès direct aux ressources statiques
<FilesMatch "\.(jpg|jpeg|png|gif|svg|css|js)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>